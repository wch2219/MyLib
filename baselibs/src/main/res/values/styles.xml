<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue</item>
        <!-- 设置activity切换动画 -->
        <!--<item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
    </style>
    <!--分隔线-->
    <style name="haveing">
        <item name="android:layout_height">0.2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/havling</item>
    </style>

    <color name="havling">#EBEBEB</color>
    <color name="havlingtran">#88EBEBEB</color>
    <color name="inputpine">#33FFFFFF</color>
    <color name="inputpine1">#66FFFFFF</color>


    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--AlderDialog主题-->
    <style name="Theme.DeviceDefault.Dialog.Alert" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>


    <style name="OnClickBg">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/inputpine</item>
        <item name="colorControlActivated">@color/inputpine1</item>
        <item name="android:textCursorDrawable">@drawable/shape_edit_cursor_color</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/pingfangregular_xml</item>
    </style>

    <style name="MyEditText1" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/havling</item>
        <item name="colorControlActivated">@color/havlingtran</item>
        <item name="android:textCursorDrawable">@drawable/shape_edit_cursor_color</item>
    </style>
    <!--浮动标签-->
    <style name="hintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainActivity_meun">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
    </style>

    <style name="PopuCityStyle" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/popu_show</item>
        <item name="android:windowExitAnimation">@anim/popu_dis</item>
    </style>


    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>

    <style name="SplashActivityTheme" parent="AppTheme">

        <item name="android:background">@color/blue</item>

    </style>



    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>
    
    <!--字体包样式-->
    <style name="PingFangLight">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/pingfanglight_xml</item>
    </style>
    <style name="PingFangMedium">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/pingfangmedium_xml</item>
    </style>
     <style name="PingFangRegular">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/pingfangregular_xml</item>
    </style>
     <style name="PingFangSemibold">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/pingfangsemibold_xml</item>
    </style>
     <style name="PingFangThin">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/pingfangthin_xml</item>
    </style>
     <style name="PingFangUltraLight">
        <item name="android:fontFamily" tools:ignore="NewApi">@font/pingfangultralight_xml</item>
    </style>

    <style name="TextAppearance.Design.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/design_tab_text_size</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
